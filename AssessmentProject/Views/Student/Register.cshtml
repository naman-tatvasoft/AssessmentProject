@model DataAccessLayer.ViewModels.RegisterViewModel;
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register";
}
<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Register Here</h3>
                        <form id="RegisterStudentForm" asp-controller="Student" asp-action="RegisterStudent">
                            <div class="row">
                                <div class="form-floating col-6 p-1">
                                    <input type="text" class="form-control" asp-for="@Model.Name" id="floatingInput"
                                        placeholder="Name*">
                                    <label for="floatingInput" class="text-secondary">Name*</label>
                                    <span asp-validation-for="@Model.Name" class="text-danger validate"></span>
                                </div>
                                <div class="form-floating col-6 p-1">
                                    <select class="form-select" asp-for="@Model.DepartmentId"
                                        id="selectDepartmentDropDown" asp-items="ViewBag.DepartmentFields">
                                    </select>
                                    <label for="selectDepartmentDropDown">Department</label>
                                </div>

                            </div>
                            <div class="row">

                                <div class="form-floating col-6 p-1">
                                    <input type="text" class="form-control" asp-for="@Model.Email" id="Email"
                                        placeholder="Email*">
                                    <label for="Email" class="text-secondary">Email*</label>
                                    <span asp-validation-for="@Model.Email" class="text-danger validate"></span>
                                </div>
                                <div class="form-floating col-6 p-1">
                                    <input type="text" class="form-control" asp-for="@Model.Password" id="floatingInput"
                                        placeholder="Password**" required>
                                    <label for="floatingInput">Password*</label>
                                    <span asp-validation-for="@Model.Password" class="text-danger validate"></span>
                                </div>
                            </div>
                             <div class="login-forgot-div d-flex align-items-center justify-content-end form-group">
                                <div class=""><a style="text-decoration: none;" class="login" asp-controller="UserCred" asp-action="Index">Login here</a></div>
                            
                            </div>
                            <div class=" w-100 d-flex justify-content-between pt-2">
                                <button type="submit" class="btn btn-primary" style="width:98%">Save</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
