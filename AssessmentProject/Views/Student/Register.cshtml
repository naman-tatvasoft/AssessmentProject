@model DataAccessLayer.ViewModels.RegisterViewModel;
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register";
}

<form id="RegisterStudentForm" asp-controller="Student" asp-action="RegisterStudent">
    <div class="row">
        <div class="form-floating col-6 p-1">
            <input type="text" class="form-control" asp-for="@Model.Name" id="floatingInput" placeholder="Name*">
            <label for="floatingInput" class="text-secondary">Name*</label>
            <span asp-validation-for="@Model.Name" class="text-danger validate"></span>
        </div>
        <div class="form-floating col-6 p-1">
            <select class="form-select" asp-for="@Model.DepartmentId" id="selectDepartmentDropDown"
                asp-items="ViewBag.DepartmentFields">
            </select>
            <label for="selectDepartmentDropDown">Department</label>
        </div>

    </div>
    <div class="row">

        <div class="form-floating col-6 p-1">
            <input type="text" class="form-control" asp-for="@Model.Email" id="Email" placeholder="Email*">
            <label for="Email" class="text-secondary">Email*</label>
            <span asp-validation-for="@Model.Email" class="text-danger validate"></span>
        </div>
        <div class="form-floating col-6 p-1">
            <input type="text" class="form-control" asp-for="@Model.Password" id="floatingInput"
                placeholder="Password**" required>
            <label for="floatingInput">Password*</label>
            <span asp-validation-for="@Model.Password" class="text-danger validate"></span>
        </div>
    </div>

    <div class=" w-100 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" style="width:48%">Save</button>
    </div>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
